{% extends 'base.tmpl' %}
{% block title %}{{ title }}{% endblock %}
{% block content %}
  <div class="container">
    <div id="editform">
      <span>title:
        <input type="text" class="input-block-level" id="title" name="title" value="{{ place.title }}">
      </span>
      <span>author:
        <input type="text" class="input-block-level" id="author" name="author" value="{{ place.author }}">
      </span>
      <span>location:
        <input type="text" class="input-block-level" id="scenelocation" name="scenelocation" value="{{ place.scenelocation}}">
      </span>
      <span>description:
        <input type="text" class="input-block-level" id="scenedescription" name="scenedescription" value="{{ place.scenedescription }}">
      </span>
      <span>notes:
        <input type="text" class="input-block-level" id="notes" name="notes" value="{{ place.notes }}">
      </span>
      <span>image url:
        <input type="text" class="input-block-level" id="image_url" name="image_url" value="{{ place.image_url }}">
      </span>
      <span>actors:
        <input type="text" class="input-block-level" id="actors" name="actors" value="{{ place.actors }}">
      </span>
      <span>time of day:
        <input type="text" class="input-block-level" id="scenetime" name="scenetime" value="{{ place.scenetime }}">
      </span>
      <span>symbols:
        <input type="text" class="input-block-level" id="symbols" name="symbols" value="{{ place.symbols }}">
      </span>
      <span>user-submitted isbn
        <input type="text" class="input-block-level" id="ug_isbn" name="ug_isbn" value="{{ place.ug_isbn }}">
      </span>
      <span id="editplacebutton" class="btn placesubmit">Save Place</span>
      <a href="/all"><span class="btn placesubmit">All Places</span></a>
      <span id="deleteplacebutton" class="btn placesubmit">Delete Place</span>
    </div>
  </div>
{% endblock %}
{% block scripts %}
  <script src="/js/src/app.js"></script>
  <script src="/js/src/allscenes.js"></script>
{% endblock %}